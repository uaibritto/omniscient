	"Server Action Form": {
		"scope": "javascriptreact",
		"prefix": "saf",
		"body": [
			"import { useActionState } from \"react\"",
			"import { action } from \"@/actions\"",
			"",
			"export default function ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}() {",
			"    const [_, formAction, isPending] = useActionState(action, null)",
			"",
			"    return (",
			"        <form action={formAction}>",
			"            $1",
			"            <button type=\"submit\" disabled={isPending}>",
			"                {isPending ? \"Loading...\" : \"Submit\"}",
			"            </button>",
			"        </form>",
			"    )",
			"}"
		],
		"description": "Creates a React server action form component",
		"isFileTemplate": true
	},

	"React Router Component": {
		"scope": "javascriptreact",
		"prefix": "rrc",
		"body": [
			"import { BrowserRouter, Route, Routes } from \"react-router\"",
			"",
			"import { Home } from \"@/pages\"",
			"import { NotFound } from \"@/pages/erros\"",
			"import RootLayout from \"@/rootLayout\"",
			"",
			"export default function ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}() {",
			"    return (",
			"        <BrowserRouter>",
			"            <Routes>",
			"                <Route path=\"/\" element={<RootLayout />}>",
			"                    <Route index element={<Home />} />",
			"                </Route>",
			"",
			"                <Route path=\"*\" element={<NotFound />} />",
			"            </Routes>",
			"        </BrowserRouter>",
			"    )",
			"}"
		],
		"description": "Creates a React router component",
		"isFileTemplate": true
	},

	"Tanstack Query Component": {
		"scope": "javascriptreact",
		"prefix": "tqe",
		"body": [
			"import { useQuery } from \"@tanstack/react-query\"",
			"",
			"export default function ${TM_FILENAME_BASE/(.*)/${1:/capitalize}/}() {",
			"    const [data, isLoading, error] = useQuery({",
			"        queryKey: [\"$1\"],",
			"        queryFn: async () => { $2 }",
			"    })",
			"",
			"    return (",
			"        $3",
			"    )",
			"}"
		],
		"description": "Creates a Tanstack Query component",
		"isFileTemplate": true
	},

